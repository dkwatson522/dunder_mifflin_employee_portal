<div class="flex-1 flex flex-col overflow-hidden">
  <%= DateTime.now.strftime('%a, %d %b %Y %H:%M:%S') %> <br>
  <%= @user.requests.first.updated_at.strftime('%a, %d %b %Y %H:%M:%S') %>

  <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-200 rounded-md">
    <div class="container mx-auto px-6 py-8">
      <%= month_calendar(attribute: :created_at, end_attribute: :updated_at) do |date| %>
        <%= date.day %>
      <% end %>
      <div class="divide-x-8 text-gray-700 text-3xl font-medium flex flex-row items-center">
        <%= image_tag ("#{@user.image_url}"), class:"h-16 w-16 rounded-full" %>
        <span class="self-end font-bold text-blue-500 underline">
          <%= @user.name.split.map(&:capitalize).join(' ') %>
        </span>
      </div>
      <div class="mt-4">
        <% if @user.requests %>
          <div class="flex flex-col mt-8">
            <div class="-my-2 py-2 overflow-x-auto sm:-mx-6 sm:px-6 lg:-mx-8 lg:px-8">
              <div class="align-middle inline-block min-w-full shadow overflow-hidden sm:rounded-lg border-b border-gray-200">
                <table class="min-w-full">
                  <thead>
                    <tr>
                      <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                        Request Made
                      </th>
                      <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                        Start Date
                      </th>
                      <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                        End Date
                      </th>
                      <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                        PTO Hours Requested
                      </th>
                      <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                        Status
                      </th>
                      <th class="px-6 py-3 border-b border-gray-200 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                        Response
                      </th>
                    </tr>
                  </thead>

                  <tbody class="bg-white">
                    <% @user.requests.each do |r| %>
                      <tr>
                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                          <div class="flex items-center">
                            <div class="ml-4">
                              <div class="text-sm leading-5 font-medium text-gray-900">
                                <%= r.created_at.strftime('%a, %d %b %Y') %>
                              </div>
                            </div>
                          </div>
                        </td>

                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                          <div class="text-sm leading-5 text-gray-900">
                            <%= r.start_date %>
                          </div>
                        </td>

                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200">
                          <div class="text-sm leading-5 text-gray-900">
                            <%= r.end_date %>
                          </div>
                        </td>

                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 text-gray-500">
                          <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800"><%= r.number_of_hours %>
                          </span>
                        </td>

                        <td class="px-6 py-4 whitespace-no-wrap border-b border-gray-200 text-sm leading-5 text-gray-500">
                          <% if r.created_at == r.updated_at %>
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-gray-100 text-gray-800">Pending</span>
                          <% elsif r.is_approved == true %>
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Approved</span>
                          <% elsif r.is_approved == false %>
                            <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Denied</span>
                          <% end %>
                        </td>
                        <td class="px-6 py-4 whitespace-no-wrap text-right border-b border-gray-200 text-sm leading-5 font-medium">
                          <%= link_to "EDIT", edit_user_request_path(@user,r.id), class:"text-indigo-600 hover:text-indigo-900" %>
                        </td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </main>
</div>
