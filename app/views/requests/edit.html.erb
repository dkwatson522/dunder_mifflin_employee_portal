<main class="flex flex-col">
  <%= form_for @request, url: user_request_path(@user), html: {class: "bg-gray-200 shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2"} do |r| %>
    <div class="p-3">
      <h3 class="font-bold text-xl text-center">Edit Request</h3>
    </div>

    <div class="">
      <%= r.label :start_date, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= r.text_field :start_date,
        data: {
          controller: "flatpickr",
          flatpickr_alt_format: t("date.formats.long"),
          # flatpickr_date_format: "%B %m, %Y",
          flatpickr_alt_input: true,
          flatpickr_min_date: Time.zone.now,
          flatpickr_default_date: @request.start_date
        },
        class:"appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3"
      %>
    </div>
    <div class="">
      <%= r.label :end_date, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
