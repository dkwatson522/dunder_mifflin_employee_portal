          class:"appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3"
        %>
      </div>
      <div class="md:w-1/2 pl-3">
        <%= r.label :is_approved, "Status", class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
        <%= r.select :is_approved, options_for_select([['Approved', true], ['Denied', false]]), :prompt => 'Select One' %>
