<main class="bg-gray-200 shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2 items-center uppercase tracking-wide text-grey-darker">
  <h2 class="block uppercase tracking-wide text-grey-darker text-xl font-bold mb-2">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= f.email_field :email, class:"appearance-none block bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3", autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= f.password_field :password, autocomplete: "current-password", class:"appearance-none block bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
        <%= f.label :remember_me, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2 bg-blue-400 p-2 rounded-md" %>
    </div>
  <% end %>
  <%= render "devise/shared/links" %>
</main>
