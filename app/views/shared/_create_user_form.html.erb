<div class="">
  <%= form_for @new_user , url: new_user_path, html: {class: "bg-gray-200 shadow-md rounded px-8 pt-6 pb-8 mb-4 flex flex-col my-2"} do |e| %>
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= e.label :name, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= e.text_field :name, class:"appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3", placeholder:"enter name" %>
    </div>
    <div class="md:w-1/2 px-3">
      <%= e.label :email, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= e.text_field :email, class:"appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3", placeholder:"enter email" %>
    </div>
  </div>
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-full px-3">
      <%= e.label :password, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= e.text_field :password, class:"appearance-none block w-full bg-grey-lighter text-grey-darker border border-grey-lighter rounded py-3 px-4 mb-3", placeholder:"******************" %>
      <p class="text-grey-dark text-xs italic">*Password must be 6 characters</p>
    </div>

  </div>
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3 mb-6 md:mb-0">
      <%= e.label :role, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= e.text_field :role, class:"appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3", placeholder:"enter role" %>
    </div>
    <div class="md:w-1/2 px-3">
      <%= e.label :department, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= e.select :department, [ 'Sales', 'Accounting', 'Human Resources', 'Management', 'Reception','Product Oversight', 'Warehouse' ], :prompt => 'Select One' %>
    </div>
    <div class="md:w-1/2 px-3">
      <%= e.label :salary, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= e.number_field :salary, class:"appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3", placeholder:"enter salary" %>
    </div>
  </div>
  <div class="-mx-3 md:flex mb-6">
    <div class="md:w-1/2 px-3">
      <%= e.label :experience, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= e.number_field :experience, class:"appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3", placeholder:"enter years of experience" %>
    </div>
    <div class="md:w-1/2 px-3">
      <%= e.label :paid_time_off, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= e.number_field :paid_time_off, class:"appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3", placeholder:"enter PTO amount" %>
    </div>
    <div class="md:w-1/2 px-3">
      <%= e.label :manager_id, class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= e.number_field :manager_id, class:"appearance-none block w-full bg-grey-lighter text-grey-darker border border-red rounded py-3 px-4 mb-3", placeholder:"enter Manager ID" %>
    </div>
    <div class="md:w-1/2 px-3">
      <%= e.label :is_admin, 'Administrator', class:"block uppercase tracking-wide text-grey-darker text-xs font-bold mb-2" %>
      <%= e.radio_button :is_admin, 'true' %>
      Yes
      <%= e.radio_button :is_admin, 'false' %>
      No
    </div>
  </div>

  <% end %>


</div>
